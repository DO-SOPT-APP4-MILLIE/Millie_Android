<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp">

    <include
        android:id="@+id/content_content_title"
        layout="@layout/content_title_with_right_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF6F6F6F"
        app:layout_constraintStart_toStartOf="@id/content_content_title"
        app:layout_constraintTop_toBottomOf="@id/content_content_title"
        tools:text="@string/TEMP" />

</androidx.constraintlayout.widget.ConstraintLayout>