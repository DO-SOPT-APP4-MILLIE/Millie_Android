<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="11dp"
    android:layout_marginBottom="35dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_monthly_main"
        android:layout_width="132dp"
        android:layout_height="175dp"
        android:src="@drawable/img_monthly_1"
        app:layout_constraintDimensionRatio="0.754"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_monthly_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        tools:text="포토에세이:\n파트1"
        style="@style/TitleBoldSubhead2"
        app:layout_constraintStart_toStartOf="@id/iv_monthly_main"
        app:layout_constraintTop_toBottomOf="@id/iv_monthly_main" />

    <TextView
        android:id="@+id/tv_monthly_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="10dp"
        tools:text="MBC 드라마 연인 제…"
        android:textColor="@color/DarkGrey01"
        style="bodyreg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_monthly_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_monthly_author">

        <ImageView
            android:id="@+id/iv_monthly_plus"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_plus_info"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_monthly_plus_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="63% | 9분"
            android:gravity="center"
            android:textColor="@color/DarkGrey01"
            app:layout_constraintBottom_toBottomOf="@id/iv_monthly_plus"
            app:layout_constraintStart_toEndOf="@id/iv_monthly_plus"
            app:layout_constraintTop_toTopOf="@id/iv_monthly_plus" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>